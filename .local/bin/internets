#!/bin/bash

if [ -n "${1}" ]; then
  if [ "${1}" == "stop" ]; then
    sudo sudo -u rybalkin killall -q heaven-proxy
    sudo sudo -u rybalkin killall -q ssh
    sudo killall -SIGINT tor >/dev/null 2>&1
    sudo /root/bin/uwifi
    exit 0
  fi
fi

sudo /root/bin/wifi
sudo sudo -u tor /usr/bin/tor -f /etc/tor/torrc --runasdaemon 1 >/dev/null 2>&1
