#!/bin/bash

REPOS=`echo ~/projects/kiin{,-repo,-configs} ~/projects/{private,rybalkin.org,todo} ~/`
if [ "${1}" == "freelance" ]; then
  REPOS=`echo ~/freelance/banner-{common,adman,engine,stats,sync} /srv/www`
fi


for i in ${REPOS}; do
  cd $i
  if [ "${1}" == "pull" ]; then
    git pull
    sleep 5
  else
    echo "-------------------------------"
    echo "*** " $i
    git status
    echo
  fi
done
