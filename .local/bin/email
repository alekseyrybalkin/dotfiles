#!/bin/bash

if [ -n "${1}" ]; then
  if [ "${1}" == "stop" ]; then
    if [ -f /tmp/rybalkin.fetchmail.pid ]; then
      kill `head -n 1 /tmp/rybalkin.fetchmail.pid`
    fi
    exit 0
  fi
fi

if [ "`hostname`" == "ritchie" ]; then
  touch /tmp/rybalkin.fetchmail.log
  touch /tmp/rybalkin.procmail.log
  fetchmail --pidfile=/tmp/rybalkin.fetchmail.pid -v
fi
