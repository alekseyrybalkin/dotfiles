import getpass
import hashlib
import itertools
import sys

numerals = "0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"


def convert(number, base, numerals):
    if (number == 0):
        return "0"
    else:
        rest = convert(number // base, base, numerals).lstrip("0")
        return rest + numerals[number % base]


def normalize(hasher):
    return convert(int(hasher.hexdigest(), 16), len(numerals), numerals)


try:
    service = getpass.getpass("Service: ").encode("ascii", "ignore")
except KeyboardInterrupt as _:
    print('')
    sys.exit()
for _ in range(450):
    hasher = hashlib.sha512()
    hasher.update(service)
    service = normalize(hasher).encode("ascii", "ignore")

print(service[:30].decode("UTF-8"))
